# [ ~/.config/sxhkd/sxhkdrc ]
# 'Annotated' by tbck['s broken english]
# ... even though most are self explanitory
##


##
# bspwm hotkeys
##


## VIEW / FOCUS ##

## focus clicked window
~button1
    bspc pointer -g focus
## focus / shift window by direction
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}
## focus or move window to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}
## focus previous window / desktop
super + {grave,Tab}
    bspc {window,desktop} -f last
## cycle window focus
super + {_,shift + }c
    bspc window -f {next,prev}
## cycle focus of tiled windows
super + {d,shift + d}
    bspc window -f {next,prev}.tiled
## cycle focus of floating, unlike or like windows
super + {_,shift + }{a,v,e}
    bspc window -f {next,prev}.{floating,unlike,like}
## focus prev / next desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}
## focus next / next free desktop
super + alt + bracket{left,right}
    bspc desktop -f {prev,next}.free
## focus prev / next occupied desktop
super + ctrl + bracket{left,right}
    bspc desktop -f {prev,next}.occupied
## focus prev / next urgent desktop
super + ctrl + paren{left,right}
    bspc desktop -f {prev,next}.urgent
## change focus, override history
super + {_,alt + }{o,i}
    bspc control --record-history off; \
    bspc {window,desktop} {older,newer} -f; \
    bspc control --record-history on
## change focus on current monitor, override history
super + {_,alt + }{p,n}
    bspc control --record-history off; \
    bspc {window,desktop} {older,newer}.local -f; \
    bspc control --record-history on
## toggle visibility of all windows
super + z
    bspc control --toggle-visibility
## swap with largest window or focus
super + {_,alt + }m
    bspc window -{s,f} biggest


## WINDOWS ##

## close window or kill it
super + w
    bspc window -c
## transplant current window into presel area
super + y
    bspc window -w last.manual
## change presel split
super + ctrl + {1-9}
    bspc window -r 0.{1-9}
## cycle windows back / forward not workintggggg
super + {comma,period}
    bspc desktop -C {backward,forward}
## toggle floating / fullscreen window
super + {s,f,x,X,M}
    bspc window -t {floating,fullscreen,locked,sticky,private}
## balance windows
super + b
    bspc desktop -B
## send window to prev / next desktop
super + shift + bracket{left,right}
    bspc window -d {prev,next}
## swap current window with previous window
super + {_,shift + }apostrophe
    bspc window -s last{_, -f last}
## presel by direction
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}
## push window split
super + alt + {h,j,k,l}
    bspc window -e {left,down,up,right} push
## pull window split
super + alt + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull
## resize window splits with pointer
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}
## cancel presel on window / desktop
super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}
## send window to prev / next desktop and follow
super + alt + shift + bracket{left,right}
    bspc window -d {prev,next} -f
## set one shot property for next opened window
super + alt + {s,f,x,X,M}
    bspc rule -a \* {--floating,--fullscreen,--locked,--sticky,--private} --one-shot
## open next window on a certain desktop
super + alt + {1-9,0}
    bspc rule -a \* -d ^{1-9,10} --one-shot
## explicitly define split
super + alt + ctrl + {h,j,k,l} ; {0-9}
    bspc window -e {right,up,down,left} 0.{0-9}


## DESKTOPS ##

## cycle layouts
super + t
    bspc desktop -l next
## flip desktop vertically / horizontally
super + {backslash,shift + backslash}
    bspc desktop -F {vertical,horizontal}
## rotate desktop 90* by direction or 180*
super + {r,R,u}
    bpsc desktop -R {90,-90,180}



## OTHER ##

## spawn a transparent frame
super + alt + space
    create_frame
## reset rules
#super + shift + alt + space
#    bspc rule -r \*
## dat
super + !button{1-3}
    bspc pointer -t %i %i
## exit bspwm and kill panel. save history if just restarting
super + alt + {shift + ,_}Escape
    pkill -x panel; {bspc quit 1,\
     bspc query -T > "$BSPWM_TREE"; \
     bspc query -H > "$BSPWM_HISTORY"; \
     bspc query -S > "$BSPWM_STACK"; \
     bspc quit}


##                            ##
#    wm independent hotkeys    #
##                            ##


## spawn terminal
super + Return
    urxvt

## run command
super + space
    run_menu

## take screenshot or desktop or window
super + {Pause,shift + Pause}
    scrot {-e,-s -e} 'sxiv $f'

## raise / lower volume
XF86Audio{Raise,Lower}Volume
    amixer -M set Master 4%{+,-}

## mute volume
XF86AudioMute
    amixer -M set Master toggle


##           ##
#    sxhkd    #
##           ##


## make sxhkd reload its configuration files.
super + Escape
    pkill -USR1 -x sxhkd
