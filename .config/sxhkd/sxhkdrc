##
# [ ~/.config/sxhkd/sxhkdrc ]
# 'Annotated' by tbck['s broken english]
# ... even though most are self explanitory
# output of `xev'
##


##
# bspwm hotkeys
##


## focus / shift window by direction
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}
## focus or move window to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}
## focus prev / next desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}
## cycle window focus
super + {_,shift + }c
    bspc window -f {next,prev}
## focus previous window / desktop
super + {grave,Tab}
    bspc {window,desktop} -f last


## close window or kill it
super + w
    bspc window -c
## toggle visibility of all windows
super + z
    bspc control --toggle-visibility


## transplant current window into presel area
super + y
    bspc window -w last.manual
## swap current window with previous window
super + {_,shift + }apostrophe
    bspc window -s last{_, -f last}
## swap with largest window or focus
super + {_,alt + }m
    bspc window -{s,f} biggest


## presel by direction
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}
## change presel split
super + ctrl + {1-9}
    bspc window -r 0.{1-9}


## push window split
super + alt + {h,j,k,l}
    bspc window -e {left -20,down +20,up -20,right +20}
## pull window split
super + alt + shift + {h,j,k,l}
    bspc window -e {right -20,up +20,down -20,left +20}


## send window to prev / next desktop
super + shift + bracket{left,right}
    bspc window -d {prev,next}
## send window to prev / next desktop and follow
super + alt + shift + bracket{left,right}
    bspc window -d {prev,next} -f


## cycle layouts
super + t
    bspc desktop -l next
## toggle psuedo_tile
super + alt + space
    bspc window -t pseudo_tiled
## toggle modes
super + {s,f,x,X,M}
    bspc window -t {floating,fullscreen,locked,sticky,private}


## flip desktop
super + {backslash,shift + backslash}
    bspc desktop -F {vertical,horizontal}
## rotate desktop
super + {r,R}
    bspc desktop -R {90,-90}
## cycle windows
super + {comma,period}
    bspc desktop -C {backward,forward}


## one-shot psuedo tile
super + alt + shift + space
    bspc rule -a \* -o pseudo_tiled=on
## open next window on a certain desktop
super + alt + {1-9,0}
    bspc rule -a \* -o desktop=^{1-9,10}
## set one shot property for next opened window
super + alt + {s,f,x,X,M}
    bspc rule -a \* -o {floating,fullscreen,locked,sticky,private}=on


## dat
super + !button{1-3}
    bspc pointer -t %i %i
## focus clicked window
~button1
    bspc pointer -g focus
## resize window splits with pointer
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}


## exit bspwm and kill panel. save history if just restarting
super + alt + {shift + ,_}Escape
    pkill -x panel; {bspc quit 1,\
     bspc query -T > "$BSPWM_TREE"; \
     bspc query -H > "$BSPWM_HISTORY"; \
     bspc query -S > "$BSPWM_STACK"; \
     bspc quit}


##                            ##
#    wm independent hotkeys    #
##                            ##

## spawn terminal
super + Return
    urxvt

## run command
super + space
    run_menu

## take screenshot or desktop or window
super + {Pause,shift + Pause}
    scrot {-e,-s -e} 'sxiv $f'

## raise / lower volume
XF86Audio{Raise,Lower}Volume
    amixer -M set Master 4%{+,-}; \
    getvol -M > $PANEL_FIFO

## mute volume
XF86AudioMute
    amixer -M set Master toggle; \
    getvol -M > $PANEL_FIFO

## adjust display brightness
XF86MonBrightness{Up,Down}
    xbacklight -set $((`xbacklight -get` {+,-} 20))

## toggle external monitor
XF86Display
    togglemonitor

## suspend
XF86Sleep
    sudo pm-suspend


##           ##
#    sxhkd    #
##           ##

## make sxhkd reload its configuration files.
super + Escape
    pkill -USR1 -x sxhkd

