#!/bin/sh

#if [ $(pgrep -cx panel) -gt 1 ] ; then
#    printf "%s\n" "The panel is already running." >&2
#    exit 1
#fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

bspc config bottom_padding 16
#bspc control --put-status
essid -s -i 10 -f 'G%s' > $PANEL_FIFO &
clock -s -i 60 -f 'S\f2%a %h %d \f8|\f2 %I:%M %p\fr' > $PANEL_FIFO &
battery -s -i 10 -f 'B%s %i' > $PANEL_FIFO &
getvol -M > $PANEL_FIFO &

cat "$PANEL_FIFO" | panel_bar | tbar -b &
wait
